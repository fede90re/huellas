<!DOCTYPE html>
<html lang="en">
    <title>Editar Usuario</title>
    <%- include("partials/head.ejs") %>
    <!--link de enlace a mi hoja de css-->
    <link rel="stylesheet" href="/css/registro.css" />
    <body class="fondo">
        <%- include("partials/header.ejs") %>

        <form action="/gatos?_method=PUT" method="POST" class="login-form-container">
            <h3 class="titulo-registro">Editar tus datos:</h3>

            <div class="div-container">
                <label for="nombre"></label>
                <input type="text" name="nombre" id="nombre" placeholder="Nombre" value="<%= userEditado.nombre %> " class="login-input-class" />
            </div>
            <div class="div-container">
                <label for="apellido"></label>
                <input
                    type="text"
                    name="apellido"
                    id="apellido"
                    placeholder="Apellido"
                    value="<%= userEditado.apellido %>"
                    class="login-input-class"
                />
            </div>
            <div class="div-container">
                <label for="DNI"></label>
                <input type="text" name="DNI" id="DNI" placeholder="DNI" value="<%= userEditado.DNI %>" class="login-input-class" />
            </div>
            <div class="div-container">
                <label for="email"></label>
                <input
                    type="email"
                    name="email"
                    id="email"
                    placeholder="Correo electrónico"
                    value="<%= userEditado.email %>"
                    class="login-input-class"
                />
            </div>
            <div class="div-container">
                <label for="password"></label>
                <input
                    type="password"
                    name="password"
                    id="password"
                    placeholder="Contraseña"
                    value="<%= userEditado.password %>"
                    class="login-input-class"
                />
            </div>
            <div class="div-container">
                <label for="repetir-password"></label>
                <input
                    type="password"
                    name="repetir-password"
                    id="repetir-password"
                    placeholder="Repetir contraseña"
                    value="<%= userEditado.repetir-password %>"
                    class="login-input-class"
                />
            </div>
            <div class="div-container">
                <button type="submit" class="login-button-class">Editar</button>
            </div>
        </form>
        <%- include("partials/footer.ejs") %>
        <!--link de Bootstrap-->
        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
            integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
            integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
